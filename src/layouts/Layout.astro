---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-slate-700">
		<header class="bg-pink-400 h-16 flex items-center px-8 mb-8">
			<h1 class="text-slate-800 font-bold text-xl">Fancy Karaoke</h1>
		</header>
		<slot />
	</body>
</html>
<style is:global>
</style>
