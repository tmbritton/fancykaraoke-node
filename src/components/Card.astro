---
interface Props {
	title: string;
}

const {title } = Astro.props;
---

<div class="card">
	<h2 class="card-title">
		{title}
	</h2>
	<div class="card-body">
		<slot />
	</div>
</div>
<style>
	.card {
		max-width: 600px;
    margin: 0 auto;
		background-color: var(--grey);
	}
	.card-title {
		margin: 0 0 1.5rem 0;
		font-size: 1.25rem;
		color: var(--white);
	}
	.submit-button {
		margin-left: auto;
	}
</style>
